<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hotspotStateText"
        android:layout_marginTop="25dp"
        android:textSize="10pt"
        android:text="Hotspot is currently switched off"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="How much data you want to share ? (IN MB)"
        tools:ignore="MissingConstraints" />
    <EditText
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:hint="Here Please"
        android:inputType="number"
        android:id="@+id/dataLimit"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        tools:ignore="MissingConstraints" />
    <Switch
        android:layout_below="@id/hotspotStateText"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Hotspot"
        android:id="@+id/switchHotspot"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_below="@id/switchHotspot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/refreshDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Connected Devices"
        android:onClick="showDevices"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_below="@id/refreshDevices"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtConnectedDevices"
        android:textSize="10sp"
        android:textColor="#000000"
        tools:ignore="MissingConstraints" />

</RelativeLayout>